<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nataliacodes.sheep.MainActivity"
    android:screenOrientation="landscape">

    <RelativeLayout
    android:id="@+id/screen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/wood"
    android:clipChildren="true"
    tools:layout_editor_absoluteX="47dp"
    tools:layout_editor_absoluteY="220dp">

    <Button
    android:id="@+id/start_button"
    style="@style/Widget.AppCompat.Button"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:onClick="startGame"
    android:text="Start Game"
    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
    android:layout_marginBottom="16dp"
    android:layout_above="@+id/scores_button"
    android:layout_alignLeft="@+id/scores_button"
    android:layout_alignStart="@+id/scores_button" />

    <Button
    android:id="@+id/scores_button"
    style="@style/Widget.AppCompat.Button"
    android:layout_width="200dp"
    android:layout_height="70dp"
    android:onClick="startScoreBoard"
    android:text="Scores"
    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
    android:layout_above="@+id/quit_button"
    android:layout_alignLeft="@+id/quit_button"
    android:layout_alignStart="@+id/quit_button"
    android:layout_marginBottom="24dp" />

    <Button
    android:id="@+id/quit_button"
    android:layout_width="200dp"
    android:layout_height="70dp"
    android:onClick="quitGame"
    android:padding="10dip"
    android:text="Quit"
    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
    android:layout_marginBottom="35dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true" />

    </RelativeLayout>

    </android.support.constraint.ConstraintLayout>
